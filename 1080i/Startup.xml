<?xml version="1.0" encoding="UTF-8"?>
<window>
    <onload>SetProperty(SkinInitStarted,1,home)</onload>
    <onload>ClearProperty(SkinSplashStarted,home)</onload>

    <!-- Start TMDbH service -->
    <onload condition="String.IsEmpty(Window.Property(ReloadDone))">Skin.SetBool(TMDbHelper.Service)</onload>
    <onload condition="String.IsEmpty(Window.Property(ReloadDone))">Skin.SetBool(TMDbHelper.UseLocalWidgetContainer)</onload>
    <onload condition="String.IsEmpty(Window.Property(ReloadDone))">Skin.SetString(TMDbHelper.MonitorContainer,99950)</onload>
    <onload condition="String.IsEmpty(Window.Property(ReloadDone))">Skin.SetBool(TMDbHelper.DirectCallAuto)</onload>

    <!-- Skin Init -->
    <onload condition="String.IsEmpty(Skin.String(focuscolor.name))">Skin.SetString(focuscolor.name,ff0091ea)</onload>
    <onload condition="String.IsEmpty(Skin.String(gradientcolor.name))">Skin.SetString(gradientcolor.name,ff00bfa5)</onload>
    <onload condition="!Skin.HasSetting(SkinInit)">Skin.SetString(weather.icons.path,resource://resource.images.weathericons.outline-hd/)</onload>
    <onload condition="!Skin.HasSetting(SkinInit)">Skin.SetBool(SubmenuOnly)</onload>
    <onload condition="!Skin.HasSetting(SkinInit)">Skin.SetString(widgetPath,special://skin/extras/playlists/RandomMovies.xsp)</onload>
    <onload condition="!Skin.HasSetting(SkinInit)">Skin.SetString(widgetTarget,videos)</onload>
    <onload condition="!Skin.HasSetting(SkinInit)">Skin.SetBool(HomeMultiVertical)</onload>
    <onload condition="!Skin.HasSetting(SkinInit)">Skin.SetBool(HomeMulti)</onload>
    <onload condition="!Skin.HasSetting(SkinInit)">Skin.SetString(Icons,monochrome)</onload>
    <onload condition="!Skin.HasSetting(SkinInit)">Skin.SetString(homebackgroundimage,special://skin/media/common/bg2.jpg)</onload>
    <onload condition="!Skin.HasSetting(SkinInit)">Skin.SetString(fanart.fallback,special://skin/media/common/bg2.jpg)</onload>
    <onload condition="!Skin.HasSetting(SkinInit)">RunScript(script.skinhelper,gradient=true,highlight=$VAR[ColorHighlight],gradient=$VAR[ColorGradient])</onload>
    <onload condition="!Skin.HasSetting(SkinInit)">Skin.SetString(PosterHighlight,Mix)</onload>
    
    <!-- Added vinelec-->
    <onload condition="!Skin.HasSetting(SkinInit)">Skin.SetBool(EnableZoomOnHover)</onload>
    <onload condition="!Skin.HasSetting(SkinInit)">Skin.SetBool(ShowInfoPaused)</onload>
    <onload condition="!Skin.HasSetting(SkinInit)">Skin.SetBool(HideForwardRewindButton)</onload>
    <onload condition="!Skin.HasSetting(SkinInit)">Skin.SetBool(OSD.AutoHideOnPause)</onload>
    <onload condition="!Skin.HasSetting(SkinInit)">Skin.SetBool(HomeIcons)</onload>
    <onload condition="!Skin.HasSetting(SkinInit)">Skin.SetBool(HighlightTransparency)</onload>
    <onload condition="!Skin.HasSetting(SkinInit)">Skin.SetBool(HideBookmarksButton)</onload>
    <onload condition="!Skin.HasSetting(SkinInit)">Skin.SetBool(HideChaptersButton)</onload>
    <onload condition="!Skin.HasSetting(SkinInit)">Skin.SetBool(SubmenuOnly)</onload>
    <onload condition="!Skin.HasSetting(SkinInit)">Skin.SetBool(DisableStarRating)</onload>
    <onload condition="!Skin.HasSetting(SkinInit)">Skin.SetBool(OSDSubtitleSettings)</onload>
    <onload condition="!Skin.HasSetting(SkinInit)">Skin.SetBool(Ratings.Oscars)</onload>
    <onload condition="!Skin.HasSetting(SkinInit)">Skin.SetBool(Ratings.User)</onload>
    <onload condition="!Skin.HasSetting(SkinInit)">Skin.SetBool(Ratings.Metacritic)</onload>
    <onload condition="!Skin.HasSetting(SkinInit)">Skin.SetBool(Ratings.IMDB.Votes)</onload>
    <onload condition="!Skin.HasSetting(SkinInit)">Skin.SetBool(Ratings.TheMovieDB)</onload>
    <onload condition="!Skin.HasSetting(SkinInit)">Skin.SetBool(Ratings.Trakt)</onload>
    <onload condition="!Skin.HasSetting(SkinInit)">Skin.SetBool(PlayerScrollSeekbar)</onload>
    <onload condition="!Skin.HasSetting(SkinInit)">Skin.SetBool(ShowDate)</onload>
    <onload condition="!Skin.HasSetting(SkinInit)">Skin.SetBool(EI_HideBG)</onload>
    <onload condition="!Skin.HasSetting(SkinInit)">Skin.SetBool(DisableOSDInfo)</onload>
    <onload condition="!Skin.HasSetting(SkinInit)">Skin.SetBool(EnhancedAddonLabels)</onload>
    <onload condition="!Skin.HasSetting(SkinInit)">Skin.SetString(OSD_Timeout,4 Seconds)</onload>
    <onload condition="!Skin.HasSetting(SkinInit)">Skin.SetString(AlphaValue_Highlight,40)</onload>

    <!-- 
    --- Boolean true ---
    EnableZoomOnHover
    ShowInfoPaused
    HideForwardRewindButton
    OSD.AutoHideOnPause
    HomeIcons
    HighlightTransparency
    HideBookmarksButton
    HideChaptersButton
    SubmenuOnly
    DisableStarRating
    OSDSubtitleSettings
    HidePlayerInfoButton
    Ratings.Oscars
    Ratings. others
    PlayerScrollSeekbar
    ShowDate
    EI_HideBG
    DisableOSDInfo
    EnhancedAddonLabels

    -----Strings----
    OSD_Timeout - '4 Seconds'
    <setting id="AlphaValue" type="string">40</setting>
    -->


    <onload condition="!String.IsEmpty(Skin.String(StartupPlaylist))">ReplaceWindow(1113)</onload>
    <onload condition="String.IsEmpty(Skin.String(StartupPlaylist))">ReplaceWindow($INFO[System.StartupWindow])</onload>

    <onload>SetProperty(ReloadDone,1)</onload>
    <onload>SetProperty(ReloadDone,1,Home)</onload>
    <controls />
</window>
