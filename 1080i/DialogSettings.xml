<?xml version="1.0" encoding="UTF-8"?>
<window>
    <!-- <onload condition="Window.IsActive(osdsubtitlesettings) + !String.IsEmpty(Window(Home).Property(ShowSubs))">Notification(,This is test notification)</onload> -->
    <onload condition="Window.IsActive(osdsubtitlesettings)">SetProperty(skin.vinelec-subtilewindow,1,Home)</onload>
    <onload condition="[Window.IsActive(osdsubtitlesettings) | Window.IsActive(osdaudiosettings)] + !String.IsEmpty(Window(Home).Property(ShowSubs))">SendClick($VAR[OSD_SettingsDialogClickId])</onload>
    <onload condition="[Window.IsActive(osdsubtitlesettings) | Window.IsActive(osdaudiosettings)] + !String.IsEmpty(Window(Home).Property(ShowSubs))">Dialog.Close($VAR[OSD_SettingsDialogId])</onload>
    <onunload condition="!String.IsEmpty(Window(Home).Property(skin.vinelec-subtilewindow) + String.IsEmpty(Window(Home).Property(plugin.video.jellycon-updatesub)">SetProperty(plugin.video.jellycon-updatesub,1,Home)</onunload>
    <onunload condition="!String.IsEmpty(Window(Home).Property(skin.vinelec-subtilewindow)">ClearProperty(skin.vinelec-subtilewindow,Home)</onunload>

    <!-- <onunload condition="!String.IsEmpty(Window(Home).Property(ShowSubs))">Notification(,This is close notification)</onunload> -->
    <onunload condition="!String.IsEmpty(Window(Home).Property(ShowSubs))">ClearProperty(ShowSubs,Home)</onunload>
    <controls>
        <control type="group">
            <animation effect="fade" start="100" end="0" time="400" condition="Window.IsVisible(SliderDialog)">Conditional</animation>
            <include>Global_Overlay_Alpha</include>
        </control>

        <control type="group">
            <visible>!Window.IsVisible(SliderDialog)</visible>
            <visible>!Window.IsActive(osdsubtitlesettings) + !Window.IsActive(osdaudiosettings) | String.IsEmpty(Window(Home).Property(ShowSubs))</visible>
            <include content="Dialog_Standard_Group">
                <param name="width" value="1420" />
                <param name="height" value="850" />
            </include>

            <control type="label" id="2">
                <include>Dialog_Standard_Header</include>
            </control>

            <control type="grouplist" id="5">
                <description>control area</description>
                <left>0</left>
                <top>dialog_top</top>
                <right>dialog_side_grouplist</right>
                <bottom>dialog_pad</bottom>
                <itemgap>0</itemgap>
                <onup>5</onup>
                <ondown>5</ondown>
                <onright>61</onright>
                <pagecontrol>61</pagecontrol>
                <usecontrolcoords>true</usecontrolcoords>
            </control>

            <include content="Dialog_Scrollbar">
                <param name="onleft" value="5" />
            </include>
            
           
            <control type="group">
                <include>Dialog_Standard_Right_Group</include>
                <control type="grouplist" id="8000">
                    <onleft>61</onleft>
                    <orientation>vertical</orientation>
                    <itemgap>0</itemgap>
                    <control type="button" id="28" description="OK">
                        <label>186</label>
                        <include>Dialog_Standard_Right_Buttons</include>
                    </control>
                    <control type="button" id="29" description="Cancel">
                        <label>222</label>
                        <include>Dialog_Standard_Right_Buttons</include>
                    </control>
                    <control type="button" id="30" description="Defaults">
                        <label>409</label>
                        <include>Dialog_Standard_Right_Buttons</include>
                    </control>
                </control>
            </control>
        </control>
        <include>Dialog_Default_Buttons</include>
    </controls>

</window>
